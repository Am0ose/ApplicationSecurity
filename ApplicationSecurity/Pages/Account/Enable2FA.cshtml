@page
@model ApplicationSecurity.Pages.Account.Enable2FAModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<h2>Two-Factor Authentication (2FA)</h2>

<form method="post">
    <div class="form-check">
        <input asp-for="Is2FAEnabled" class="form-check-input" type="checkbox">
        <label asp-for="Is2FAEnabled" class="form-check-label">Enable 2FA via Email</label>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>
